<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>
<BorderPane depthTest="DISABLE" focusTraversable="true" nodeOrientation="LEFT_TO_RIGHT" prefHeight="720.0" prefWidth="1280.0"
            style="-fx-background-color: #FFEC8B;" xmlns="http://javafx.com/javafx/8.0.131" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.GameOption">
    <stylesheets>
        <URL value="@Main.css" />
    </stylesheets>
    <top>
        <StackPane>
            <Button
                    text="Back"
                    fx:id="btnBackToMenu"
                    textFill="White"
                    translateX="10"
                    translateY="10"
                    StackPane.alignment="TOP_LEFT"
                    onAction="#backToMenu"
            >
                <font>
                    <Font name="System Bold" size="20" />
                </font>
            </Button>
            <Label alignment="CENTER" prefHeight="30" text="Option" textAlignment="CENTER" textFill="#683a01">
                <font>
                    <Font name="System Bold" size="50.0" />
                </font>
            </Label>
        </StackPane>
    </top>
    <center

    >
        <VBox
            BorderPane.alignment="TOP_CENTER"
            minWidth="380"
            maxWidth="380"
            alignment="TOP_CENTER"
            spacing="10"
        >
            <HBox
                alignment="TOP_CENTER"
                spacing="10"
            >
                <VBox
                        fx:id="optionList1"
                        minWidth="380"
                        maxWidth="380"
                >

                </VBox>
                <VBox
                        fx:id="optionList2"
                        minWidth="380"
                        maxWidth="380"
                >

                </VBox>
            </HBox>

            <Button
                    text="Start Game"
                    fx:id="btnStartGame"
                    maxWidth="300"
                    minWidth="300"
                    onAction="#startGame"
                    textFill="White"
                    translateY="30"
            >
                <font>
                    <Font name="System Bold" size="30" />
                </font>
            </Button>
        </VBox>
    </center>

</BorderPane>
