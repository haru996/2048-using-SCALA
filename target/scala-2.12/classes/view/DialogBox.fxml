<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import javafx.scene.text.Font?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.DialogBox"
      prefHeight="200.0" prefWidth="600.0"
      style="-fx-background-color: #FFEC8B;"
      spacing="10"
      alignment="TOP_CENTER"
>
    <stylesheets>
        <URL value="@Main.css" />
    </stylesheets>
    <Label alignment="CENTER" prefHeight="30" text="Warning" textAlignment="CENTER" textFill="#683a01">
        <font>
            <Font name="System Bold" size="50.0" />
        </font>
    </Label>
    <Label alignment="CENTER" prefHeight="30" text="Back to menu and end game? Score will be saved" textAlignment="CENTER" textFill="#683a01">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>
    <HBox
            spacing="10"
            alignment="TOP_CENTER"
    >
        <Button
                text="Ok"
                fx:id="btnDialogOk"
                textFill="White"
                onAction="#okAction"
        >
            <font>
                <Font name="System Bold" size="20" />
            </font>
        </Button>

        <Button
                text="Cancel"
                fx:id="btnDialogCancel"
                textFill="White"
                onAction = "#cancelAction"
        >
            <font>
                <Font name="System Bold" size="20" />
            </font>
        </Button>
    </HBox>
</VBox>
